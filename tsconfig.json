{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "strictNullChecks": true,
    "target": "es5",
    "module": "es6",
    "lib": ["es6", "dom"],
    "types": [],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": false,
    "noResolve": false,
    "noUnusedParameters": false,

    "importHelpers": true,

    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude" : [
    "./node_modules/**/*"
  ]
}
